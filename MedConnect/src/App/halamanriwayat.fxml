<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="App.ControllerRiwayat"
            style="-fx-background-color: linear-gradient(to bottom, #fef9f3, #fff5e6);">

    <VBox alignment="TOP_CENTER" prefHeight="800.0" prefWidth="1200.0" spacing="20"
          AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <padding>
            <Insets top="20" bottom="20" left="25" right="25" />
        </padding>

        <!-- Header -->
        <HBox alignment="CENTER_LEFT" prefWidth="600" spacing="12" 
              style="-fx-background-color: white; -fx-background-radius: 12px; -fx-padding: 12px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);">
            <Button fx:id="btnKembali" text="← Kembali"
                    onAction="#onKembaliClicked"
                    style="-fx-background-color: #f48c2a; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8px; -fx-pref-width: 100px; -fx-cursor: hand;" />
            <Region HBox.hgrow="ALWAYS" />
            <Label text="●" style="-fx-font-size: 16px; -fx-text-fill: #f48c2a;" />
            <Label text="MEDCONNECT - RIWAYAT PASIEN"
                   style="-fx-font-size: 20px; -fx-text-fill: #f48c2a; -fx-font-weight: bold; -fx-font-family: 'Segoe UI', Arial, sans-serif;" />
        </HBox>

        <!-- Form Input -->
        <VBox alignment="CENTER" spacing="15" 
              style="-fx-background-color: white; -fx-background-radius: 12px; -fx-padding: 20px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);">
            
            <Label text="Form Input Riwayat Pasien"
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;" />
            
            <GridPane hgap="15" vgap="10" alignment="CENTER">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="120" />
                    <ColumnConstraints halignment="LEFT" minWidth="200" />
                    <ColumnConstraints halignment="RIGHT" minWidth="120" />
                    <ColumnConstraints halignment="LEFT" minWidth="200" />
                </columnConstraints>

                <!-- Row 1 -->
                <Label text="Nama Pasien:" GridPane.columnIndex="0" GridPane.rowIndex="0"
                       style="-fx-font-weight: bold; -fx-text-fill: #333;" />
                <TextField fx:id="fieldNamaPasien" GridPane.columnIndex="1" GridPane.rowIndex="0"
                           promptText="Masukkan nama pasien"
                           style="-fx-background-radius: 8px; -fx-pref-width: 200px;" />
                
                <Label text="Keluhan:" GridPane.columnIndex="2" GridPane.rowIndex="0"
                       style="-fx-font-weight: bold; -fx-text-fill: #333;" />
                <TextField fx:id="fieldKeluhan" GridPane.columnIndex="3" GridPane.rowIndex="0"
                           promptText="Masukkan keluhan pasien"
                           style="-fx-background-radius: 8px; -fx-pref-width: 200px;" />

                <!-- Row 2 -->
                <Label text="Diagnosis:" GridPane.columnIndex="0" GridPane.rowIndex="1"
                       style="-fx-font-weight: bold; -fx-text-fill: #333;" />
                <TextField fx:id="fieldDiagnosis" GridPane.columnIndex="1" GridPane.rowIndex="1"
                           promptText="Masukkan diagnosis"
                           style="-fx-background-radius: 8px; -fx-pref-width: 200px;" />
                
                <Label text="Tanggal:" GridPane.columnIndex="2" GridPane.rowIndex="1"
                       style="-fx-font-weight: bold; -fx-text-fill: #333;" />
                <TextField fx:id="fieldTanggal" GridPane.columnIndex="3" GridPane.rowIndex="1"
                           promptText="DD-MM-YYYY"
                           style="-fx-background-radius: 8px; -fx-pref-width: 200px;" />

                <!-- Row 3 -->
                <Label text="Resep Obat:" GridPane.columnIndex="0" GridPane.rowIndex="2"
                       style="-fx-font-weight: bold; -fx-text-fill: #333;" />
                <TextField fx:id="fieldResepObat" GridPane.columnIndex="1" GridPane.rowIndex="2"
                           promptText="Masukkan resep obat"
                           style="-fx-background-radius: 8px; -fx-pref-width: 200px;" />
            </GridPane>

            <!-- Buttons -->
            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="btnTambah" text="Tambah Data"
                        onAction="#onTambahClicked"
                        style="-fx-background-color: #f48c2a; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8px; -fx-pref-width: 120px; -fx-cursor: hand;" />
                <Button fx:id="btnEdit" text="Edit Data"
                        onAction="#onEditClicked"
                        style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8px; -fx-pref-width: 120px; -fx-cursor: hand;" />
                <Button fx:id="btnHapus" text="Hapus Data"
                        onAction="#onHapusClicked"
                        style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8px; -fx-pref-width: 120px; -fx-cursor: hand;" />
            </HBox>
        </VBox>

        <!-- Table -->
        <VBox alignment="CENTER" spacing="10" VBox.vgrow="ALWAYS"
              style="-fx-background-color: white; -fx-background-radius: 12px; -fx-padding: 20px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);">
            
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Daftar Riwayat Pasien"
                       style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;" />
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="labelTotal" text="Total Riwayat Pasien: 0"
                       style="-fx-font-size: 14px; -fx-text-fill: #666; -fx-font-weight: bold;" />
            </HBox>
            
            <TableView fx:id="tableRiwayat" onMouseClicked="#onTableClicked" 
                       style="-fx-background-radius: 8px;" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="columnNamaPasien" text="Nama Pasien" prefWidth="200" />
                    <TableColumn fx:id="columnKeluhan" text="Keluhan" prefWidth="200" />
                    <TableColumn fx:id="columnDiagnosis" text="Diagnosis" prefWidth="200" />
                    <TableColumn fx:id="columnTanggal" text="Tanggal" prefWidth="120" />
                    <TableColumn fx:id="columnResepObat" text="Resep Obat" prefWidth="200" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </VBox>
</AnchorPane>