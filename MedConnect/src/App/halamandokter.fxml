<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="App.ControllerHaldok"
            style="-fx-background-color: linear-gradient(to bottom, #fef9f3, #fff5e6);">

    <VBox alignment="TOP_CENTER" prefHeight="800.0" prefWidth="1200.0" spacing="25"
          AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <padding>
            <Insets top="20" bottom="30" left="25" right="25" />
        </padding>

        <!-- Header dengan Shadow Effect -->
        <HBox alignment="CENTER_LEFT" prefWidth="600" spacing="12" 
              style="-fx-background-color: white; -fx-background-radius: 12px; -fx-padding: 12px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);">
            <Label text="●" style="-fx-font-size: 16px; -fx-text-fill: #f48c2a;" />
            <Label text="MEDCONNECT"
                   style="-fx-font-size: 24px; -fx-text-fill: #f48c2a; -fx-font-weight: bold; -fx-font-family: 'Segoe UI', Arial, sans-serif;" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnNotifikasi" text="🔔"
                    onAction="#handleNotifikasi"
                    style="-fx-font-size: 16px; -fx-background-color: #f48c2a; -fx-text-fill: white; -fx-background-radius: 20px; -fx-pref-width: 40px; -fx-pref-height: 40px; -fx-cursor: hand;" />
        </HBox>

        <!-- Banner Utama dengan Frame -->
        <VBox alignment="CENTER" spacing="8">
            <!-- Logo MedConnect di Tengah -->
            <Label style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #f48c2a; -fx-font-family: 'Segoe UI', Arial, sans-serif;" 
                   text="MedConnect" />
        </VBox>

        <!-- Status Cards dengan Background Putih -->
        <VBox alignment="CENTER" spacing="15">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" 
                   text="Status Praktik" />
            
            <HBox alignment="CENTER" spacing="20">
                <VBox alignment="CENTER" prefWidth="180.0" spacing="8"
                      style="-fx-background-color: white; -fx-background-radius: 15px; -fx-padding: 20px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">
                    <Label fx:id="lblPasienHariIni" text="12" 
                           style="-fx-font-size: 28px; -fx-text-fill: #f48c2a; -fx-font-weight: bold; -fx-font-family: 'Segoe UI';" />
                    <Label text="Pasien Hari Ini" 
                           style="-fx-font-size: 12px; -fx-text-fill: #666; -fx-font-weight: 500; -fx-font-family: 'Segoe UI';" />
                    <Label text="📊" style="-fx-font-size: 16px;" />
                </VBox>
                
                <VBox alignment="CENTER" prefWidth="180.0" spacing="8"
                      style="-fx-background-color: white; -fx-background-radius: 15px; -fx-padding: 20px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">
                    <Label fx:id="lblKonsultasiAktif" text="5" 
                           style="-fx-font-size: 28px; -fx-text-fill: #f48c2a; -fx-font-weight: bold; -fx-font-family: 'Segoe UI';" />
                    <Label text="Konsultasi Aktif" 
                           style="-fx-font-size: 12px; -fx-text-fill: #666; -fx-font-weight: 500; -fx-font-family: 'Segoe UI';" />
                    <Label text="💬" style="-fx-font-size: 16px;" />
                </VBox>
                
                <VBox alignment="CENTER" prefWidth="180.0" spacing="8"
                      style="-fx-background-color: white; -fx-background-radius: 15px; -fx-padding: 20px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">
                    <Label fx:id="lblRatingDokter" text="4.8" 
                           style="-fx-font-size: 28px; -fx-text-fill: #f48c2a; -fx-font-weight: bold; -fx-font-family: 'Segoe UI';" />
                    <Label text="Rating Dokter" 
                           style="-fx-font-size: 12px; -fx-text-fill: #666; -fx-font-weight: 500; -fx-font-family: 'Segoe UI';" />
                    <Label text="⭐" style="-fx-font-size: 16px;" />
                </VBox>
            </HBox>
        </VBox>

        <!-- Menu Grid dengan Card Design -->
        <VBox alignment="CENTER" spacing="15">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" 
                   text="Pilih Layanan" />
            
            <GridPane alignment="CENTER" hgap="20" vgap="20">
                <columnConstraints>
                    <ColumnConstraints halignment="CENTER" percentWidth="50" />
                    <ColumnConstraints halignment="CENTER" percentWidth="50" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints valignment="CENTER" />
                    <RowConstraints valignment="CENTER" />
                </rowConstraints>

                <!-- Card 1: Konsultasi Online -->
                <VBox alignment="CENTER" spacing="10" 
                      style="-fx-background-color: white; -fx-background-radius: 15px; -fx-padding: 15px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);" 
                      GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Label style="-fx-font-size: 60px;" text="💻" />
                    <Button fx:id="btnKonsultasiOnline" onAction="#handleKonsultasiOnline" 
                            style="-fx-background-color: #f48c2a; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px; -fx-background-radius: 12px; -fx-pref-width: 150px; -fx-pref-height: 35px; -fx-cursor: hand;" 
                            text="Konsultasi Online" />
                </VBox>

                <!-- Card 2: Panel Janji Temu -->
                <VBox alignment="CENTER" spacing="10" 
                      style="-fx-background-color: white; -fx-background-radius: 15px; -fx-padding: 15px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);" 
                      GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <Label style="-fx-font-size: 60px;" text="📅" />
                    <Button fx:id="btnJadwalPraktik" onAction="#handleJadwalPraktik" 
                            style="-fx-background-color: #f48c2a; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px; -fx-background-radius: 12px; -fx-pref-width: 150px; -fx-pref-height: 35px; -fx-cursor: hand;" 
                            text="Janji Temu" />
                </VBox>
      
                <!-- Card 3: Riwayat Pasien -->
                <VBox alignment="CENTER" spacing="10" 
                      style="-fx-background-color: white; -fx-background-radius: 15px; -fx-padding: 15px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);" 
                      GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <Label style="-fx-font-size: 60px;" text="📋" />
                    <Button fx:id="btnRiwayatPasien" onAction="#handleRiwayatPasien" 
                            style="-fx-background-color: #f48c2a; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px; -fx-background-radius: 12px; -fx-pref-width: 150px; -fx-pref-height: 35px; -fx-cursor: hand;" 
                            text="Riwayat Pasien" />
                </VBox>
   
                <!-- Card 4: Profil Dokter -->
                <VBox alignment="CENTER" spacing="10" 
                      style="-fx-background-color: white; -fx-background-radius: 15px; -fx-padding: 15px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);" 
                      GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <Label style="-fx-font-size: 60px;" text="👨‍⚕️" />
                    <Button fx:id="btnProfilDokter" onAction="#handleProfilDokter" 
                            style="-fx-background-color: #f48c2a; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px; -fx-background-radius: 12px; -fx-pref-width: 150px; -fx-pref-height: 35px; -fx-cursor: hand;" 
                            text="Profil Dokter" />
                </VBox>
            </GridPane>
        </VBox>
    </VBox>
</AnchorPane>