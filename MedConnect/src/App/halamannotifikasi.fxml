<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="App.ControllerNotifikasi"
            prefWidth="1200.0" prefHeight="800.0"
            style="-fx-background-color: #f3edff;">

    <VBox alignment="TOP_CENTER"
          spacing="20"
          prefHeight="600.0" prefWidth="800.0"
          AnchorPane.topAnchor="0.0"
          AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0">

        <padding>
            <Insets top="20" bottom="20" left="30" right="30"/>
        </padding>

        <HBox alignment="CENTER_LEFT" spacing="10" prefWidth="800">
            <Button fx:id="backButton"
                    text="â†"
                    onAction="#handleBack"
                    style="-fx-background-color: transparent; -fx-font-size: 18px; -fx-text-fill: #f48c2a;"/>
            <Label text="Konsultasi"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #f48c2a;"/>
            <Region HBox.hgrow="ALWAYS"/>
        </HBox>

        <StackPane alignment="TOP_LEFT"
                   prefWidth="740" prefHeight="400"
                   style="-fx-background-color: white; -fx-background-radius: 10;">
            <padding>
                <Insets top="30" bottom="30" left="30" right="30"/>
            </padding>

            <VBox alignment="TOP_CENTER" spacing="20" prefWidth="740" prefHeight="400">
                
                <VBox fx:id="notificationList"
                      spacing="10"
                      prefWidth="680" prefHeight="250">
                </VBox>
                
                <Region VBox.vgrow="ALWAYS"/>
                
                <Button fx:id="chatDokterButton"
                        text="Chat Dokter"
                        onAction="#handleChatDokter"
                        prefWidth="150" prefHeight="40"
                        style="-fx-background-color: transparent; -fx-border-color: #f48c2a; -fx-border-width: 2px;
                               -fx-border-radius: 20px; -fx-text-fill: #f48c2a; -fx-font-size: 14px; -fx-font-weight: bold;"/>
            </VBox>
        </StackPane>

        <Region VBox.vgrow="ALWAYS"/>

        <HBox alignment="CENTER" spacing="20">
            <Button text="Beranda"
                    onAction="#onBerandaClicked"
                    style="-fx-background-color: #f48c2a; -fx-text-fill: white; -fx-font-weight: bold;
                           -fx-background-radius: 10px; -fx-pref-width: 200px; -fx-padding: 10px;"/>

            <Button text="Profile"
                    onAction="#onProfileClicked"
                    style="-fx-background-color: #f48c2a; -fx-text-fill: white; -fx-font-weight: bold;
                           -fx-background-radius: 10px; -fx-pref-width: 200px; -fx-padding: 10px;"/>
        </HBox>
    </VBox>
</AnchorPane>