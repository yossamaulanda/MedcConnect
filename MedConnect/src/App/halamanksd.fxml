            <Label style="-fx-text-fill: #f48c2a; -fx-font-size: 24px; -fx-font-weight: bold;" text="Konsultasi Dokter" />
            <Label fx:id="patientNameLabel" style="-fx-text-fill: #e67e22; -fx-font-size: 18px;" text="dengan Pasien: Azmi" />
         </HBox>
      </VBox>
   </top>
   
   <center>
      <VBox spacing="15" style="-fx-background-color: #fff3e0; -fx-padding: 20;">
         
         <!-- Panel Informasi Pasien -->
         <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
