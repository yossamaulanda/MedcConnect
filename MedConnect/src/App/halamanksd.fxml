<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: #f48c2a;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="App.ControllerKsd">
   <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
   <top>
      <VBox style="-fx-background-color: white; -fx-padding: 20;">
         <HBox alignment="CENTER_LEFT" spacing="15">
            <Button fx:id="backButton" onAction="#handleBack" prefHeight="40" prefWidth="80" style="-fx-background-color: #f48c2a; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;" text="â† Kembali" />
