                  <Label style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" text="Nama Lengkap:" />
                  <Label fx:id="patientFullName" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" text="Azmi" />
               </VBox>
               <VBox spacing="5">
                  <Label style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" text="Umur:" />
                  <Label fx:id="patientAge" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" text="28 tahun" />
               </VBox>
               <VBox spacing="5">
                  <Label style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" text="Keluhan Utama:" />
                  <Label fx:id="patientComplaint" style="-fx-font-size: 14px; -fx-text-fill: #f48c2a; -fx-font-weight: bold;" text="Demam dan sakit tenggorokan" />
               </VBox>
            </HBox>
         </VBox>
         
         <!-- Area Chat -->
         <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <HBox alignment="CENTER_LEFT" spacing="10">
               <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="ðŸ’¬ Percakapan" />
               <Label fx:id="consultationStatus" style="-fx-background-color: #f48c2a; -fx-text-fill: white; -fx-padding: 4 8; -fx-background-radius: 12; -fx-font-size: 12px;" text="â— Aktif" />
            </HBox>
            
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="400" style="-fx-background: #f8f9fa; -fx-background-color: #f8f9fa; -fx-background-radius: 8;">
               <VBox fx:id="chatMessages" spacing="10" style="-fx-padding: 15; -fx-background-color: #f8f9fa;" />
            </ScrollPane>
         </VBox>
         
         <!-- Panel Input dan Kontrol -->
         <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            
            <!-- Input Pesan -->
            <HBox alignment="CENTER_LEFT" spacing="10">
               <TextField fx:id="messageInput" onAction="#handleSendMessage" prefHeight="45" promptText="Ketik pesan Anda sebagai dokter..." style="-fx-background-color: #f8f9fa; -fx-border-color: #bdc3c7; -fx-border-radius: 8; -fx-padding: 10; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
               <Button fx:id="sendButton" onAction="#handleSendMessage" prefHeight="45" prefWidth="80" style="-fx-background-color: #f48c2a; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 8;" text="Kirim" />
            </HBox>
            
            <!-- Panel Aksi Dokter -->
            <HBox alignment="CENTER_LEFT" spacing="15">
               <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Aksi Dokter:" />
               <Button fx:id="diagnoseButton" onAction="#handleGiveDiagnosis" prefHeight="35" style="-fx-background-color: #f48c2a; -fx-text-fill: white; -fx-font-size: 12px; -fx-background-radius: 6;" text="ðŸ“‹ Berikan Diagnosis" />
               <Button fx:id="prescribeButton" onAction="#handlePrescribeMedicine" prefHeight="35" style="-fx-background-color: #f48c2a; -fx-text-fill: white; -fx-font-size: 12px; -fx-background-radius: 6;" text="ðŸ’Š Resep Obat" />
               <Button fx:id="scheduleButton" onAction="#handleScheduleFollowUp" prefHeight="35" style="-fx-background-color: #f48c2a; -fx-text-fill: white; -fx-font-size: 12px; -fx-background-radius: 6;" text="ðŸ“… Jadwal Kontrol" />
            </HBox>
            

            
         </VBox>
         
      </VBox>
   </center>
   </BorderPane>
