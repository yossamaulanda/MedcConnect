<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="App.ControllerJanjitemu"
            prefHeight="800.0" prefWidth="1200.0"
            style="-fx-background-color: #fef9f3;">

    <VBox alignment="TOP_CENTER" prefHeight="800.0" prefWidth="1200.0" spacing="18"
          AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <padding>
            <Insets top="20" bottom="20" left="25" right="25" />
        </padding>

        <!-- Header Simple -->
        <HBox alignment="CENTER_LEFT" spacing="15" 
              style="-fx-background-color: white; -fx-background-radius: 8px; -fx-padding: 15px;">
            <Button fx:id="btnKembali" text="â† Kembali" onAction="#handleKembali"
                    style="-fx-background-color: #f48c2a; -fx-text-fill: white; -fx-background-radius: 5px; -fx-cursor: hand; -fx-font-size: 14px; -fx-pref-width: 120px; -fx-pref-height: 40px;" />
            <Label text="JADWAL JANJI TEMU"
                   style="-fx-font-size: 18px; -fx-text-fill: #f48c2a; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnRefresh" text="ðŸ”„ Refresh" onAction="#handleRefresh"
                    style="-fx-background-color: #f48c2a; -fx-text-fill: white; -fx-background-radius: 5px; -fx-cursor: hand; -fx-font-size: 12px; -fx-pref-width: 100px; -fx-pref-height: 35px;" />
        </HBox>

        <!-- Filter Simple -->
        <HBox alignment="CENTER" spacing="15" 
              style="-fx-background-color: white; -fx-background-radius: 8px; -fx-padding: 15px;">
            <Label text="Filter:" style="-fx-text-fill: #333; -fx-font-size: 14px;" />
            <ComboBox fx:id="comboFilter" prefWidth="150" prefHeight="35" promptText="Semua" 
                      style="-fx-font-size: 12px;" />
            <TextField fx:id="txtSearch" prefWidth="200" prefHeight="35" promptText="Cari nama..." 
                       style="-fx-font-size: 12px;" />
            <Button fx:id="btnCari" text="Cari" onAction="#handleCari"
                    style="-fx-background-color: #f48c2a; -fx-text-fill: white; -fx-background-radius: 5px; -fx-font-size: 12px; -fx-pref-width: 80px; -fx-pref-height: 35px;" />
        </HBox>

        <!-- Stats Simple -->
        <HBox alignment="CENTER" spacing="20">
            <VBox alignment="CENTER" spacing="5"
                  style="-fx-background-color: white; -fx-background-radius: 8px; -fx-padding: 20px;">
                <Label fx:id="lblTotalJanji" text="3" 
                       style="-fx-font-size: 24px; -fx-text-fill: #f48c2a; -fx-font-weight: bold;" />
                <Label text="Total" style="-fx-font-size: 12px; -fx-text-fill: #666;" />
            </VBox>
            
            <VBox alignment="CENTER" spacing="5"
                  style="-fx-background-color: white; -fx-background-radius: 8px; -fx-padding: 20px;">
                <Label fx:id="lblMenunggu" text="3" 
                       style="-fx-font-size: 24px; -fx-text-fill: #f48c2a; -fx-font-weight: bold;" />
                <Label text="Menunggu" style="-fx-font-size: 12px; -fx-text-fill: #666;" />
            </VBox>
            
            <VBox alignment="CENTER" spacing="5"
                  style="-fx-background-color: white; -fx-background-radius: 8px; -fx-padding: 20px;">
                <Label fx:id="lblDikonfirmasi" text="0" 
                       style="-fx-font-size: 24px; -fx-text-fill: #f48c2a; -fx-font-weight: bold;" />
                <Label text="Dikonfirmasi" style="-fx-font-size: 12px; -fx-text-fill: #666;" />
            </VBox>
            
            <VBox alignment="CENTER" spacing="5"
                  style="-fx-background-color: white; -fx-background-radius: 8px; -fx-padding: 20px;">
                <Label fx:id="lblSelesai" text="0" 
                       style="-fx-font-size: 24px; -fx-text-fill: #f48c2a; -fx-font-weight: bold;" />
                <Label text="Selesai" style="-fx-font-size: 12px; -fx-text-fill: #666;" />
            </VBox>
        </HBox>

        <!-- Daftar Janji -->
        <VBox alignment="CENTER" spacing="12" VBox.vgrow="ALWAYS">
            <Label text="Daftar Janji Temu" 
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;" />
            
            <ScrollPane fx:id="scrollPane" fitToWidth="true" prefHeight="420"
                        style="-fx-background-color: transparent;">
                <VBox fx:id="vboxDaftarJanji" spacing="12">
                    <!-- Konten akan diisi secara dinamis oleh controller -->
                </VBox>
            </ScrollPane>
        </VBox>
    </VBox>
</AnchorPane>