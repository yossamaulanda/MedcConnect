<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="App.controllertabel">

    <VBox alignment="TOP_CENTER" prefHeight="800.0" prefWidth="1200.0" spacing="20" style="-fx-background-color: linear-gradient(to bottom, #fef9f3, #fff5e6);" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="20" left="25" right="25" top="20" />
        </padding>

        <HBox alignment="CENTER_LEFT" prefWidth="600" spacing="12" style="-fx-background-color: white; -fx-background-radius: 12px; -fx-padding: 12px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);">
            <Button fx:id="btnKembali" onAction="#onKembaliClicked" style="-fx-font-size: 14px; -fx-background-color: #f48c2a; -fx-text-fill: white; -fx-background-radius: 20px; -fx-pref-width: 120px; -fx-pref-height: 35px; -fx-cursor: hand;" text="â† Kembali" />
            <Region HBox.hgrow="ALWAYS" />
            <Label style="-fx-font-size: 24px; -fx-text-fill: #f48c2a; -fx-font-weight: bold; -fx-font-family: 'Segoe UI', Arial, sans-serif;" text="MEDCONNECT" />
            <Circle fill="#f48c2a" radius="5" />
        </HBox>

        <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #f48c2a; -fx-font-family: 'Segoe UI', Arial, sans-serif;" text="ðŸ“‹ Tabel Pengingat" />

        <VBox alignment="CENTER" spacing="15" style="-fx-background-color: white; -fx-background-radius: 15px; -fx-padding: 20px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Tambah/Edit Pengingat" />
            
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label style="-fx-font-size: 14px; -fx-text-fill: #333; -fx-min-width: 100px;" text="Nama Dokter:" />
                <TextField fx:id="fieldNamaDokter" promptText="Masukkan nama dokter..." style="-fx-pref-width: 300px; -fx-font-size: 14px;" />
            </HBox>
            
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label style="-fx-font-size: 14px; -fx-text-fill: #333; -fx-min-width: 100px;" text="Saran Dokter:" />
                <TextField fx:id="fieldSaranDokter" promptText="Masukkan saran dokter..." style="-fx-pref-width: 300px; -fx-font-size: 14px;" />
            </HBox>
            
            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="btnTambah" onAction="#onTambahClicked" style="-fx-background-color: #f48c2a; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px; -fx-background-radius: 8px; -fx-pref-width: 100px; -fx-pref-height: 35px; -fx-cursor: hand;" text="Tambah" />
                <Button fx:id="btnEdit" onAction="#onEditClicked" style="-fx-background-color: #f48c2a; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px; -fx-background-radius: 8px; -fx-pref-width: 100px; -fx-pref-height: 35px; -fx-cursor: hand;" text="Edit" />
                <Button fx:id="btnHapus" onAction="#onHapusClicked" style="-fx-background-color: #f48c2a; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px; -fx-background-radius: 8px; -fx-pref-width: 100px; -fx-pref-height: 35px; -fx-cursor: hand;" text="Hapus" />
            </HBox>
        </VBox>

        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-background-radius: 15px; -fx-padding: 20px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">
            <Label fx:id="labelTotal" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #f48c2a;" text="Total Pengingat: 0" />
            
            <TableView fx:id="tablePengingat" onMouseClicked="#onTableClicked" prefHeight="350.0" prefWidth="1000.0" style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 8px;">
                <columns>
                    <TableColumn fx:id="columnNamaDokter" prefWidth="500.0" style="-fx-font-size: 14px;" text="Nama Dokter" />
                    <TableColumn fx:id="columnSaranDokter" prefWidth="500.0" style="-fx-font-size: 14px;" text="Saran Dokter" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>

    </VBox>
</AnchorPane>